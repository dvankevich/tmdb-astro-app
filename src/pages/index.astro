---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Tailwind + Astro">
    <div class="container mx-auto px-4 py-16">
        <h1 class="text-5xl font-bold text-center mb-12 text-blue-400">
            Tailwind працює
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div
                class="bg-linear-to-br from-purple-600 to-indigo-600 p-8 rounded-2xl shadow-xl text-center"
            >
                Блок 1
            </div>
            <div
                class="bg-linear-to-br from-pink-500 to-rose-500 p-8 rounded-2xl shadow-xl text-center"
            >
                Блок 2
            </div>
            <div
                class="bg-linear-to-br from-cyan-500 to-teal-500 p-8 rounded-2xl shadow-xl text-center"
            >
                Блок 3
            </div>
        </div>

        <div class="mt-16 text-center">
            <button
                hx-get="/api/hello"
                hx-target="#result"
                hx-swap="innerHTML"
                class="bg-green-600 hover:bg-green-700 px-8 py-4 rounded-xl text-lg font-medium"
            >
                Завантажити через HTMX
            </button>

            <div id="result" class="mt-6 p-8 bg-zinc-800 rounded-2xl min-h-25">
            </div>
        </div>
    </div>
</Layout>
